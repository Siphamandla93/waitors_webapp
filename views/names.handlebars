<form class="" action="/waitors/{{usename}}" method="post">

<div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
<div class="btn btn-primary">
    <input type="checkbox"  name="week" {{#if days.Monday}} checked {{/if}} value="Monday">Monday
  </div>
  <div class="btn btn-success">
      <input type="checkbox"  name="week" {{#if days.Tuesday}} checked {{/if}} value="Tuesday">Tuesday
    </div>
    <div class="btn btn-danger">
      <input type="checkbox"  name="week" {{#if days.Wednesday}} checked {{/if}} value="Wednesday">Wednesday

      </div>
      <div class="btn btn-warning">
        <input type="checkbox"  name="week" {{#if days.Thursday}} checked {{/if}} value="Thursday">Thursday
      </div>

    <div class="btn btn-info">
      <input type="checkbox"  name="week" {{#if days.Friday}} checked {{/if}} value="Friday">Friday
    </div>
    <div class="btn btn-danger">
      <input type="checkbox"  name="week" {{#if days.Saturday}} checked {{/if}} value="Saturday">Saturday
    </div>

    <div class="btn btn-success">
      <input type="checkbox"  name="week" {{#if days.Sunday}} checked {{/if}} value="Sunday">Sunday
    </div>

    <input  class="btn btn-warning" name="Enter" type="submit">
</div>

<br>
